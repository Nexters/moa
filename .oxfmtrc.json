{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": ["bun.lock"],

  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "bracketSpacing": true,

  "experimentalSortImports": {
    "groups": [
      "builtin",
      "external",
      "internal",
      ["parent", "sibling", "index"]
    ],
    "internalPattern": ["@repo/", "~/"],
    "newlinesBetween": true
  },
  "experimentalTailwindcss": {
    "functions": ["cn"]
  }
}
