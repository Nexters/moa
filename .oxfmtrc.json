{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": ["dist", "bun.lock", "*.toml", "*.gen.ts", ".context"],

  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "bracketSpacing": true,

  "experimentalSortImports": {
    "groups": [
      ["builtin"],
      ["external"],
      ["internal"],
      ["parent", "sibling", "index"]
    ],
    "internalPattern": ["@moa/", "~/"],
    "newlinesBetween": true
  },
  "experimentalTailwindcss": {
    "functions": ["clsx", "cn", "tv"]
  }
}
