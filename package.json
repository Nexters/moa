{
  "name": "moa",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:landing": "bun --filter @moa/landing dev",
    "dev:app": "bun --filter @moa/app tauri:dev",
    "build": "turbo run build",
    "build:app": "bun --filter @moa/app tauri:build",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --fix-suggestions",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "check:all": "bun lint && bun format:check",
    "task:complete": "bun scripts/complete-task.ts",
    "task:rename-done": "bun scripts/complete-task.ts --rename-existing",
    "release:prepare": "bun scripts/prepare-release.ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "bun-types": "^1.3.6",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0",
    "turbo": "^2.7.3",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*": [
      "bun lint:fix",
      "bun format"
    ],
    "*.rs": [
      "bun --filter @moa/app rust:fmt:check"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5"
}