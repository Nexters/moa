{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**"]
    },
    "types:check": {
      "dependsOn": ["^types:check"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
